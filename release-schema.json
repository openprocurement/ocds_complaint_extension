{
  "definitions": {
    "Complaint": {
      "title": "Complaint",
      "description": "Complaints to tender conditions and their resolutions",
      "type": "object",
      "required": [
        "author"
      ],
      "properties": {
        "id": {
          "title": "Complaint ID",
          "type": "string",
          "description": "Unique identifier of the complaint"
        },
        "status": {
          "codelist": "complaintStatus.csv",
          "openCodelist": false,
          "enum": [
            "draft",
            "claim",
            "answered",
            "pending",
            "invalid",
            "declined",
            "resolved",
            "cancelled",
            "accepted",
            "stopped"
          ],
          "type": "string",
          "description": "The current status of the complaint"
        },
        "tendererActionDate": {
          "type": "string",
          "description": "The date of the tenderer action"
        },
        "satisfied": {
          "type": "boolean",
          "description": "A Yes/No field to indicate whether the complaint was satisfied"
        },
        "tendererAction": {
          "type": "string",
          "description": "Action of tenderer"
        },
        "dateSubmitted": {
          "type": "string",
          "description": "The date when claim was submitted"
        },
        "reviewPlace": {
          "type": "string",
          "description": "The place of reviewing the complaint"
        },
        "documents": {
          "uniqueItems": true,
          "items": {
            "$ref": "#/definitions/Document"
          },
          "type": "array",
          "description": "All documents and attachments related to the complaint"
        },
        "title": {
          "type": "string",
          "description": "Title of the complaint"
        },
        "decision": {
          "type": "string",
          "description": "Decision of a reviewer on the complaint"
        },
        "acceptance": {
          "type": "boolean",
          "description": "A Yes/No field to indicate whether the complaint was accepted"
        },
        "dateEscalated": {
          "type": "string",
          "description": "The date of claim to complaint escalation"
        },
        "rejectReasonDescription": {
          "type": "string",
          "description": "Description of reject reason"
        },
        "cancellationReason": {
          "type": "string",
          "description": "Reason for cancelling the complaint"
        },
        "dateAnswered": {
          "type": "string",
          "description": "The date when Procuring entity answered the claim"
        },
        "type": {
          "codelist": "complaintType.csv",
          "openCodelist": false,
          "enum": [
            "claim",
            "complaint"
          ],
          "type": "string",
          "description": "Type of the complaint"
        },
        "relatedLot": {
          "type": "string",
          "description": "An identifier of the related lot"
        },
        "description": {
          "type": "string",
          "description": "Description of the issue"
        },
        "dateCancelled": {
          "type": "string",
          "description": "The date of cancelling the complaint"
        },
        "date": {
          "type": "string",
          "description": "Date of posting the complaint"
        },
        "dateDecision": {
          "type": "string",
          "description": "The date when a decision on the complaint was made"
        },
        "author": {
          "description": "Organization filing a complaint",
          "$ref": "#/definitions/Organization"
        },
        "rejectReason": {
          "codelist": "complaintRejectReason.csv",
          "openCodelist": false,
          "enum": [
            "law",
            "payment",
            "fixed"
          ],
          "type": "string",
          "description": "Reasons of rejecting the complaint"
        },
        "resolutionType": {
          "codelist": "complaintResolutionType.csv",
          "openCodelist": false,
          "enum": [
            "invalid",
            "declined",
            "resolved"
          ],
          "type": "string",
          "description": "Type of resolution"
        },
        "resolution": {
          "type": "string",
          "description": "Resolution of Procuring entity"
        },
        "reviewDate": {
          "type": "string",
          "description": "The date of reviewing the complaint"
        }
      }
    },
    "Tender": {
      "properties": {
        "complaints": {
          "description": "Complaints to tender conditions and their resolutions",
          "title": "Complaint",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Complaint"
          }
        },
        "complaintPeriod": {
          "description": "The timeframe when complaints can be submitted.",
          "title": "Complaint period",
          "$ref": "#/definitions/Period"
        }
      }
    },
    "Award": {
      "properties": {
        "complaints": {
          "description": "Complaints to award conditions and their resolutions",
          "title": "Complaint",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Complaint"
          }
        },
        "complaintPeriod": {
          "description": "The timeframe when complaints can be submitted.",
          "title": "Complaint period",
          "$ref": "#/definitions/Period"
        }
      }
    }
  }
}